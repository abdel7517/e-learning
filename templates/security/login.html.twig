{% extends 'home.html.twig' %}

{% block title %}E-learnia - {{ 'Connexion' | trans }}{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="sidebar">
        <img class="logo" src="{{ asset('assets/img/E-learnia.png') }}" alt="logo">
    {% if app.user %}
        <div class="mb-3">
            {{ 'You are logged in as' }} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{{ 'Logout' | trans }}</a>
        </div>
    {% endif %}

    <div class="loginwrap">
    <label for="inputEmail" class="sr-only">{{ 'Email' | trans }}</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="{{ 'Email' | trans }}" required autofocus>
        <br>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{ 'Mot De Passe' | trans }}" required>
        <br>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="button button_1" type="submit">
        {{ 'Connexion' | trans }}
    </button>
    </div>
        <p class="forgot">
            <a href= {{ path('password_reset') }}>{{ 'Mot de passe oubli√© ?' | trans }}</a><br>
        </p>
    </div>

</form>
{% endblock %}
